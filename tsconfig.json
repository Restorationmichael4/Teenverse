{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "rootDir": "backend",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "strict": false,
    "baseUrl": "./"
  },
  "include": ["backend/**/*.ts"],
  "exclude": ["node_modules", "frontend"],
  "types": ["node", "sqlite3"]
}
